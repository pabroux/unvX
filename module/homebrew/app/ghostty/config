###############################################################################
# Key Bindings
###############################################################################

# Jump to prompt
keybind = "cmd+p=jump_to_prompt:-1"
keybind = "cmd+shift+p=jump_to_prompt:1"

# Toggle command palette
keybind = "cmd+shift+p=toggle_command_palette"

# Toggle quick terminal
keybind = "cmd+shift+n=toggle_quick_terminal"

# Zoom a split
keybind = "cmd+enter=toggle_split_zoom"

###############################################################################
# Options
###############################################################################

# Color
background = "#011628"
split-divider-color = "#000f1c"

# Cursor
cursor-style = "block"
cursor-style-blink = false

# Font
font-family = "SF Mono"
font-style = "Regular"
font-thicken = true
font-size = 11

# Quick terminal
quick-terminal-position = "center"
quick-terminal-animation-duration = 0.1

# Mouse
mouse-hide-while-typing = true

# Resize overlay
resize-overlay = never

# Shell integration
shell-integration-features = "no-cursor"

# Window padding
window-padding-balance = true
window-padding-color = "extend"
window-padding-y = 4
